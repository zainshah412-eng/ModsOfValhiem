<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/brown_color"
    app:cardCornerRadius="@dimen/_6sdp"
    android:layout_margin="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="@dimen/_140sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_6sdp">

                <ImageView
                    android:id="@+id/item_seed_iv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    android:src="@drawable/progress_animation"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/item_seed_iv_two"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    android:visibility="gone"
                    android:src="@drawable/ic_locked"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_4sdp">

                <TextView
                    android:id="@+id/item_seed_new_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/light_black_color"
                    android:paddingHorizontal="@dimen/_6sdp"
                    android:paddingVertical="@dimen/_3sdp"
                    android:text="@string/_new"
                    android:textColor="@color/white_seed"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/_5sdp"
                app:cardBackgroundColor="@color/yellow_color"
                app:cardCornerRadius="@dimen/_15sdp">

                <ImageView
                    android:id="@+id/item_seed_fav_iv"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/unfavorite_icon"
                    android:background="@color/yellow_color"/>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <TextView
            android:id="@+id/item_seed_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="@string/dummy_name"
            android:textColor="@color/white_seed"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_seed_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="@string/dummy_name"
            android:visibility="gone"
            android:textColor="@color/white_seed"
            android:textSize="@dimen/_13sdp" />
    </LinearLayout>


</androidx.cardview.widget.CardView>